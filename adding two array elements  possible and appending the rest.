let a = [2, 3, 5,45,6,88,97]
let b = [2, 5,8,7,6]
let output = []
let maxLength = []
if (a.length > b.length) {
    maxLength = a.length
}
else {
    maxLength = b.length
}
for (let i = 0; i < maxLength; i++) {
    if ((i < a.length) && (i < b.length)) {
        output.push(a[i] + b[i])
    }
    else if (i < a.length) {
        
        output.push(a[i])
    }
    else if (i < b.length) {
        output.push(b[i])
    }
}
console.log(output);

